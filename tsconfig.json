{
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "target": "ES2017"
  },
  "include": [
    "next-env.d.ts",
    "pages/**/*",
    "components/Roadmap.tsx",
    "components/SectionExperience.tsx",
    "components/Tooltip.tsx",
    "helpers/**/*",
    "utils/**/*"
  ],
  "exclude": [
    "node_modules",
    "helpers/ecoSceneManager.tsx",
    "components/Form.tsx",
    "**/*.spec.tsx"
  ]
}
